<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      今日の投稿数：<%= @user.books.where(created_at: Date.today.all_day).count %>
      前日の投稿数：<%= @user.books.where(created_at: 1.day.ago.all_day).count %>
    </div>
  </div>
</div>
