<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <table class='table table-bordered'>
        <tr>
          <th>今日の投稿数</th>
          <th>前日の投稿数</th>
          <th>前日比</th>
        </tr>
        <tr>
          <td><%= @book_count_today %></td>
          <td><%= @book_count_yesterday%></td>
          <td><%=  @the_day_before %></td>
        </tr>
      </table>
      <table class='table table-bordered'>
        <tr>
          <th>今週の投稿数</th>
          <th>前週の投稿数</th>
          <th>前週比</th>
        </tr>
        <tr>
          <td><%= @book_count_thisweek %></td>
          <td><%= @book_count_lastweek %></td>
          <td><%= @week_over_week %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
